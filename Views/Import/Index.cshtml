@model  FilmFind.ViewModels.Movie.ImportMoviesViewModel


@{
    ViewBag.Title = "Import Movie";
}

@*@section Styles {
        <link href="@Url.Content("~/css/MovieSummary.css")" rel="stylesheet" type="text/css" />
    }*@

<h2>What movie do you want to import?</h2>

<form method="get" asp-action="import" class="form-horizontal" style="margin-bottom:80px">
    <div class="form-inline" style="margin-top: 50px">
        <input type="text" class="form-control" placeholder="Film title" name="SearchText" />
        <input type="submit" class="btn btn-default" value="search" />
    </div>
</form>


@if (Model != null)
{
    foreach (var movie in @Model.ImportMovies)
    {
        @Html.Partial("_ImportMovieSummary", movie)

    }
}