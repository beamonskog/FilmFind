@model IEnumerable<Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole>

<h3>Admin user roles</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th><h3>Role</h3></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td>No roles created! </td></tr>
        }
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td class="pull-right">
                    <form method="post" asp-action="Delete" asp-route-id="@role.Id">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@role.Id">
                            Edit
                        </a>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">
    Add New
</a>
