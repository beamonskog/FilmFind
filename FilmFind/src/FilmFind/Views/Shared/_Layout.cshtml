@using FilmFind.Entities

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="/node_modules/font-awesome/css/font-awesome.css" rel="stylesheet" />
    @*<script src="/node_modules/jquery/dist/jquery.min.js"></script>*@
    @RenderSection("Styles", false)
    @RenderSection("scripts", required: false)

</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            @*TITLE*@
            <div class="navbar-header">
                <a class="navbar-brand" href="/">FilmFind</a>
            </div>

            @*MENU*@
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="/UserMovie" asp-action="index">MyMovies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Hyped</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="/Import" asp-action="index">Import</a>
                </li>
            </ul>

            @*SEARCH*@
            @using (Html.BeginForm(actionName: "index", controllerName: "search", method: FormMethod.Get))
            {
                <div class="navbar-form navbar-left">
                    <input type="text" class="form-control" placeholder="Film title" name="SearchText">
                    <input type="submit" class="btn btn-default" value="search" />
                </div>
            }

            @*LOGIN*@
            <ul class="nav navbar-nav navbar-right">
                @await Component.InvokeAsync("LoginLogout")
            </ul>

        </div>
    </nav>



    <div class="container">
        @RenderBody()
    </div>
    <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="container-fluid">
            <div class="navbar-footer">
                &copy; 2016 FilmFind
            </div>
        </div>
    </nav>
</body>
</html>
