@model EditRoleViewModel

<form method="post" asp-antiforgery="true" asp-for-route-id="@Model.Id">

    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="RoleName"> </label>
        <input asp-for="RoleName" autofocus>
        <span asp-validation-for="RoleName"></span>
    </div>

    <div>
        <input type="submit" value="Create" class="btn btn-primary" asp-for-route/>
    </div>

</form>